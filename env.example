ENABLE_CONVERSATION_MEMORY=true

# Document Retrieval Settings
RETRIEVAL_TOP_K=5
RETRIEVAL_THRESHOLD=0.3
ENABLE_RETRIEVAL_DEBUG=false

# UI Settings
USER_PROMPT=You
